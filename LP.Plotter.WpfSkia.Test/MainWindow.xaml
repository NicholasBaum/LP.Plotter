<Window x:Class="LP.Plotter.WpfSkia.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LP.Plotter.WpfSkia.Test" 
        xmlns:wpf="http://oxyplot.org/skiawpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <wpf:PlotView Model="{Binding OxyModel}"></wpf:PlotView>
        <StackPanel Grid.Column="1">
            <Button Click="ResetButton_Click">Reset</Button>
        </StackPanel>
    </Grid>
</Window>
