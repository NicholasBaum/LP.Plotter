@using LP.Plot.Oxy.Components
@page "/oxy"
@inject AppService appService;

<div style="display:flex;flex-direction:row;height:100%;">
    <LP.Plot.Oxy.Components.ChannelPlotter Model="@(appService.CurrentPlot)" Style="display:flex; flex:1"></LP.Plot.Oxy.Components.ChannelPlotter>
    <div style="position: relative; display: flex; flex-direction: column;">
        <MudPaper Elevation="25" Style="margin-bottom:5px">
            <LP.Plot.Oxy.Components.PlotterMenu Model="@(appService.CurrentPlot)"></LP.Plot.Oxy.Components.PlotterMenu>
        </MudPaper>
        <LP.Plot.Oxy.Components.ChannelMenu Model="@(appService.CurrentPlot)"
                                            Style="padding:10px; width:300px; position: sticky; top: 0; right: 0; overflow-y: auto; overflow-x:hidden; flex: 1;">
        </LP.Plot.Oxy.Components.ChannelMenu>
    </div>
</div>