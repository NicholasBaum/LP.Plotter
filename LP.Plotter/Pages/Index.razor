@page "/"
@using LP.Plotter.Services;
@inject AppService appService;

<div style="display:flex;flex-direction:row;height:100%;">
    <ChannelPlotter Model="@(appService.CurrentPlot)" Style="display:flex; flex:1"></ChannelPlotter>
    <div style="position: relative; display: flex; flex-direction: column;">
        <MudPaper Elevation="25" Style="margin-bottom:5px">
            <MudToolBar Dense=true>
                <MudIconButton Icon="@Icons.Material.Outlined.ZoomIn" />
                <MudIconButton Icon="@Icons.Material.Outlined.ZoomOut" Color="Color.Inherit" />
                <MudSpacer />
                <MudIconButton Icon="@Icons.Material.Filled.ZoomOutMap" Color="Color.Inherit" />
            </MudToolBar>
        </MudPaper>
        <ChannelMenu Model="@(appService.CurrentPlot)"
                     Style="padding:10px; width:300px; position: sticky; top: 0; right: 0; overflow-y: auto; overflow-x:hidden; flex: 1;">
        </ChannelMenu>
    </div>
</div>