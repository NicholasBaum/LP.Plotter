<div style="display:flex;flex-direction:row;height:100%;">
    <ChannelPlotter Model="@Model" Style="display:flex; flex:1"></ChannelPlotter>
    <div style="position: relative; display: flex; flex-direction: column;">
        <MudPaper Elevation="25" Style="margin-bottom:5px">
            <PlotterMenu Model="@Model"></PlotterMenu>
        </MudPaper>
        <ChannelMenu Model="@Model"
                     Style="padding:10px; width:300px; position: sticky; top: 0; right: 0; overflow-y: auto; overflow-x:hidden; flex: 1;">
        </ChannelMenu>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ChannelPlotModel? Model { get; set; }
}